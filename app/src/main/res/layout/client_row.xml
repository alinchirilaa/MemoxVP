<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/title_cod_fiscal"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/info_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_alignEnd="@+id/title_cod_fiscal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/thumbnail"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="placeholder"
            android:textColor="#222"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/thumbnail_cod_fiscal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fiscal_icon" />

        <TextView
            android:id="@+id/title_cod_fiscal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail_cod_fiscal"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/thumbnail_cod_fiscal"
            android:layout_toEndOf="@+id/thumbnail_cod_fiscal"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="placeholder"
            android:textColor="#222"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/title_adresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail_adresa"
            android:layout_below="@+id/thumbnail_cod_fiscal"
            android:layout_toEndOf="@+id/thumbnail_cod_fiscal"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="placeholder"
            android:textColor="#222"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/thumbnail_adresa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumbnail_cod_fiscal"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/adress_icon" />

        <TextView
            android:id="@+id/title_localitate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail_localitate"
            android:layout_below="@+id/title_adresa"
            android:layout_toEndOf="@+id/thumbnail_adresa"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text="placeholder"
            android:textColor="#222"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/thumbnail_localitate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_adresa"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/city_icon" />

    </RelativeLayout>
</android.support.v7.widget.CardView>